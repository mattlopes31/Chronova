# ===========================================
# TimeTrack Pro - Configuration
# ===========================================
# Copiez ce fichier en .env et remplissez les valeurs

# Base de données PostgreSQL
DATABASE_URL="postgresql://timetrack:timetrack123@localhost:5432/timetrack"
DB_USER=timetrack
DB_PASSWORD=timetrack123
DB_NAME=timetrack

# JWT Authentication
JWT_SECRET=votre-secret-jwt-tres-securise-a-changer-en-production
JWT_EXPIRES_IN=7d

# Configuration SMTP pour les emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-application

# URLs de l'application
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
VITE_API_URL=/api

# Admin par défaut (utilisé lors du seed)
ADMIN_EMAIL=admin@timetrack.com
ADMIN_PASSWORD=Admin123!
